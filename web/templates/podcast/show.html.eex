<h1><%= @podcast.name %></h1>

<section class="description">
<%= md_to_html(@podcast.description) %>
</section>

<%= if Enum.any?(@episodes) do %>
<ul>
  <%= for episode <- @episodes do %>
    <li>
      <%= link Changelog.EpisodeView.numbered_title(episode),
          to: episode_path(@conn, :episode, @podcast.slug, episode.slug) %>
    </li>
  <% end %>
</ul>
<% end %>
